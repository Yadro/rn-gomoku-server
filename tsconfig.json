{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "outDir": "build",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "src/public",
    "build",
    "node_modules",
    "__tests__"
  ],
  "compileOnSave": false
}